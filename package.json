{
  "name": "element-ai",
  "displayName": "ElementAI",
  "description": "AI pair programmer for frontend engineers",
  "icon": "small_logo.png",
  "version": "0.0.1",
  "author": "Riphal <bjankovic998@gmail.com> (https://twitter.com/_riphal_)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AquilaLab/element-ai-vscode"
  },
  "bugs": {
    "url": "https://github.com/AquilaLab/element-ai-vscode/issues",
    "email": "bjankovic998@gmail.com"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Chat",
    "AI",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "javascript",
    "typescript",
    "autocomplete",
    "chat",
    "code completion",
    "code generation",
    "html",
    "css",
    "react",
    "ai",
    "figma",
    "ui components",
    "generate components",
    "intellicode",
    "intellisense",
    "refactor"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "vscode-test",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "vsce:package": "vsce package",
    "vsce:publish": "vsce publish"
  },
  "contributes": {
    "submenus": [
      {
        "id": "elementai.chat.submenu",
        "label": "Element AI"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "elementai",
          "title": "Element AI",
          "icon": "small_logo.png"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "elementai.loading",
        "contents": "Loading please wait..."
      }
    ],
    "views": {
      "elementai": [
        {
          "type": "webview",
          "id": "elementai.chat",
          "name": "Chat",
          "when": "elementai.chat.webview == 'chat'"
        },
        {
          "id": "elementai.loading",
          "name": "Loading",
          "when": "elementai.chat.webview == 'loading'"
        }
      ]
    },
    "commands": [
      {
        "command": "elementai.chat.clear-all-conversations",
        "title": "Element AI: Clear all chat conversations",
        "when": "elementai.chat.ready"
      },
      {
        "command": "elementai.chat.focus-input",
        "title": "Element AI: Focus chat input"
      }
    ]
  },
  "devDependencies": {
    "@types/async": "^3.2.24",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.36",
    "async": "^3.2.5",
    "dotenv": "^16.4.5",
    "fast-glob": "^3.3.2",
    "openai": "^4.52.1",
    "uuidv4": "^6.2.13"
  }
}
