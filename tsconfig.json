{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "strict": true,
    "allowJs": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "strictFunctionTypes": false,
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": ["src/**/*", "shared/**/*"],
  "exclude": ["node_modules", "webview-ui"]
}
